<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking</title>
    <link rel="stylesheet" href="/bookingStyles/booking.css">
</head>
<body>
      <%- include('../partials/navbar') %>
<div class="new-booking-container">
    <div id="bookingModal" class="modal" >
    <div class="modal-content" >
    <h2 class="booking-title">Book <%= movie.name %> Movie</h2>
    
    <div class="movie-photo">
    <img src="<%= movie.image %>" alt="<%= movie.name %>" >
    </div>
    
    <form action="/bookings/newBooking/<%= movie._id  %>" method="POST">
      <input type="hidden" name="movieId" value="<%= movie._id %>">
      
      <div class="date-form">
      <label for="date">Select Date:</label>
      <select name="date" id="date" required >
        <option value="">--Select Date--</option>
        <!-- <option value="10-08-2025">10-08-2025</option>
        <option value="11-08-2025">11-08-2025</option>
        <option value="12-08-2025">12-08-2025</option>
        <option value="13-08-2025">13-08-2025</option> -->
        <% const dateArray = ['10-08-2025', '11-08-2025', '12-08-2025', '13-08-2025', '14-08-2025', '15-08-2025', '16-08-2025', '17-08-2025']%>
          <% const random = Math.floor(Math.random() * dateArray.length)%>
          <% const randomDate= dateArray[random]%>
        <option value=""><%=randomDate%></option>
        <option value=""><%=randomDate%></option>
        <option value=""><%=randomDate%></option>
      </select>
      </div>

      <div class="time-form">
      <label for="time">Select Time:</label>
      <select name="time" id="time" required >
        <option value="">--Select Time--</option>
        <option value="1:00 PM">1:00 PM</option>
        <option value="3:30 PM">3:30 PM</option>
        <option value="6:00 PM">6:00 PM</option>
        <option value="8:30 PM">8:30 PM</option>
      </select>
      </div>

      <button type="submit" class="confirm-btn">Confirm Booking</button>

    </form>
  </div>
</div>
</div>
    <%- include('../partials/footer') %>

</body>
</html>